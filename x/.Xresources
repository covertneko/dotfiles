! .Xresources
!----------------------------------------------------------

!-----------------------------
! Xft
!-----------------------------

Xft.dpi:                        96
Xft.antialias:                  true
Xft.rgba:                       rgb
Xft.hinting:                    true
Xft.hintstyle:                  hintslight

!-----------------------------
! URxvt
!-----------------------------

URxvt.buffered:                 true
URxvt.cursorblink:              true
URxvt.depth:                    32
URxvt.borderless:               1
URxvt.loginShell:               true
URxvt.iso14755:                 false

! Fonts
URxvt.allow_bold:               true
URxvt.font:                     xft:Monospace:style=Regular:size=12,xft:DejaVu Sans Mono:style=Regular:size=12

! Scrolling
URxvt.scrollBar:                false
URxvt.saveLines:                5000
URxvt.secondaryScroll:          true

! Extensions
URxvt.perl-ext-common:          default,matcher,clipboard
URxvt.url-launcher:             vivaldi-beta
! Left click to open link
URxvt.matcher.button:           1

! Copy and paste with ctrl-alt-c/v
! Cannot bind ctrl-shift-c/v for whatever reason
URxvt.keysym.M-C-c:             perl:clipboard:copy
URxvt.keysym.M-C-v:             perl:clipboard:paste

! Hybrid Terminal Colours. Uses the palette from Tomorrow-Night:
! https://github.com/chriskempson/tomorrow-theme/blob/master/vim/colors/Tomorrow-Night.vim

URxvt*background: #1D1F21
URxvt*foreground: #C5C8C6
URxvt*fading: 30
URxvt*cursorColor: #C5C8C6
URxvt*pointerColorBackground: #1D1F21
URxvt*pointerColorForeground: #C5C8C6

! black
URxvt*color0: #282A2E
